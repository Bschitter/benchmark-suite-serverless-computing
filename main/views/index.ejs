<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script>
$('#deployButton').click(function deploy(){

  if(!($("#amazon").prop('checked') || $("#azure").prop('checked') || $("#azureWindows").prop('checked') || $("#google").prop('checked') || $("#ibm").prop('checked')) || 
     !($("#node").prop('checked') || $("#python").prop('checked') || $("#go").prop('checked') || $("#dotnet").prop('checked'))) {
    $("#resultStart").html($("#resultStart").html() + '<span style="color:red">Please choose at least one cloud provider and one language if you want to deploy.</span><br>');
    return;
  }

  $.ajax({url: 'deploy', type: 'get',data: {
    latency: $("#latencyTest").prop('checked'),
    factors: $("#factorsTest").prop('checked'),
    memory: $("#memoryTest").prop('checked'),
    filesystem: $("#filesystemTest").prop('checked'),
    custom: $("#customTest").prop('checked'),
    ram: document.querySelector('input[name="ram"]:checked').value,
    timeout: $('#timeout').val(),
    aws: $("#amazon").prop('checked'), 
    azure: $("#azure").prop('checked'),
    azureWindows: $("#azureWindows").prop('checked'),
    google: $("#google").prop('checked'),
    ibm: $("#ibm").prop('checked'),
    node: $("#node").prop('checked'),
    python: $("#python").prop('checked'),
    go: $("#go").prop('checked'),
    dotnet: $("#dotnet").prop('checked'),
    awslocation: $('#awslocation').val(),
    azurelocation: $('#azurelocation').val(),
    googlelocation: $('#googlelocation').val(),
    ibmlocation: $('#ibmlocation').val()
  }, success:function(res){
      $("#resultStart").html(res.data);
      update();
  }});
});

$('#runButton').click(function cleanup(){

  var activeTab = $('.nav-tabs .active').attr('id');

  var data = {};

  if( activeTab == 'latency-tab') {
    data = { test: 'latency', rps: $('#rpsLatency').val() };
  } else if(activeTab == 'cpu-tab') {
    data = { test: 'factors', rps: $('#rpsCPU').val(), n: $('#nFactor').val() };
  } else if(activeTab == 'memory-tab') {
    $("#resultStart").html($("#resultStart").html() + '<span style="color:red">Not yet implemented.</span><br>');
  } else if(activeTab == 'filesystem-tab') {
    $("#resultStart").html($("#resultStart").html() + '<span style="color:red">Not yet implemented.</span><br>');
  }

  $.ajax({url: 'run', type: 'get', data: data, success:function(res){
      $("#resultStart").html(res.data);
      update();
  }});
});

$('#stopButton').click(function cleanup(){
  $.ajax({url: 'stop', type: 'get', success:function(res){

  }});
});

$('#cleanupButton').click(function cleanup(){
  $.ajax({url: 'cleanup', type: 'get', data: {awslocation: $('#awslocation').val()}, success:function(res){
      $("#resultStart").html(res.data);
      update();
  }});
});

$('#showLogFileButton').click(function cleanup(){
  window.open('logfile', '_blank');
});

$('#cleanupLogFileButton').click(function cleanup(){
  $.ajax({url: 'cleanupLogFile', type: 'get', success:function(res){
      $("#resultStart").html(res.data);
      update();
  }});
});

function update() {
  $.ajax({url: 'status', type: 'get', success:function(res){
      console.log('update...');
      $("#resultStart").html(res.dataStart);
      $("#resultAWS").html(res.dataAWS);
      $("#resultAzure").html(res.dataAzure);
      $("#resultAzureWindows").html(res.dataAzureWindows);
      $("#resultGoogle").html(res.dataGoogle);
      $("#resultIBM").html(res.dataIBM);
      $("#resultEnd").html(res.dataEnd);
      if(res.runningAWS) {
        $('#spinnerAWS').show();
      } else {
        $('#spinnerAWS').hide();
      }
      if(res.runningAzure) {
        $('#spinnerAzure').show();
      } else {
        $('#spinnerAzure').hide();
      }
      if(res.runningAzureWindows) {
        $('#spinnerAzureWindows').show();
      } else {
        $('#spinnerAzureWindows').hide();
      }
      if(res.runningGoogle) {
        $('#spinnerGoogle').show();
      } else {
        $('#spinnerGoogle').hide();
      }
      if(res.runningIBM) {
        $('#spinnerIBM').show();
      } else {
        $('#spinnerIBM').hide();
      }
      if(res.running) {
        setTimeout(function(){update();}, 1000);
      } else {
        $('#spinnerAWS').hide();
        $('#spinnerAzure').hide();
        $('#spinnerAzureWindows').hide();
        $('#spinnerGoogle').hide();
        $('#spinnerIBM').hide();
      }
  }});
}

$('#clearButton').click(function clear() {
  $("#resultStart").html('');
  $("#resultAWS").html('');
  $("#resultAzure").html('');
  $("#resultAzureWindows").html('');
  $("#resultGoogle").html('');
  $("#resultIBM").html('');
  $("#resultEnd").html('');
});

$(document).ready( function() {
  $('#spinnerAWS').hide();
  $('#spinnerAzure').hide();
  $('#spinnerAzureWindows').hide();
  $('#spinnerGoogle').hide();
  $('#spinnerIBM').hide();
});
</script>

</html>