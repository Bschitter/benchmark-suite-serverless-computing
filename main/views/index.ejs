        <div id="resultAzureWindows" class="console"><%= data %></div>
        <div id="spinnerAzureWindows" class="spinner-border text-primary"></div>
        <div id="resultGoogle" class="console"><%= data %></div>
        <div id="spinnerGoogle" class="spinner-border text-primary"></div>
        <div id="resultIBM" class="console"><%= data %></div>
        <div id="spinnerIBM" class="spinner-border text-primary"></div>
